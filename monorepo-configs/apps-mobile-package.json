{
    "name": "@flip-feeds/mobile",
    "version": "1.0.0",
    "private": true,
    "description": "FlipFeeds Mobile App - React Native/Expo",
    "main": "expo-router/entry",
    "scripts": {
        "dev": "expo start",
        "start": "expo start",
        "android": "expo start --android",
        "ios": "expo start --ios",
        "web": "expo start --web",
        "build:android": "eas build --platform android",
        "build:ios": "eas build --platform ios",
        "submit:android": "eas submit --platform android",
        "submit:ios": "eas submit --platform ios",
        "typecheck": "tsc --noEmit",
        "lint": "eslint .",
        "test": "jest",
        "clean": "rm -rf .expo node_modules"
    },
    "dependencies": {
        "// Workspace Packages": "",
        "@flip-feeds/firebase-config": "workspace:*",
        "@flip-feeds/shared-logic": "workspace:*",
        "@flip-feeds/ui-components": "workspace:*",
        "// Expo & React Native": "",
        "expo": "~51.0.0",
        "expo-router": "~3.5.0",
        "expo-status-bar": "~1.12.1",
        "react": "18.2.0",
        "react-native": "0.74.0",
        "react-native-safe-area-context": "4.10.1",
        "react-native-screens": "~3.31.1",
        "// Firebase": "",
        "@react-native-firebase/app": "^20.0.0",
        "@react-native-firebase/auth": "^20.0.0",
        "@react-native-firebase/firestore": "^20.0.0",
        "@react-native-firebase/storage": "^20.0.0",
        "@react-native-firebase/functions": "^20.0.0",
        "@react-native-firebase/messaging": "^20.0.0",
        "// UI & Navigation": "",
        "react-native-gesture-handler": "~2.16.1",
        "react-native-reanimated": "~3.10.1",
        "nativewind": "^4.0.0",
        "// Video": "",
        "expo-av": "~14.0.0",
        "react-native-video": "^6.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.24.0",
        "@types/react": "~18.2.79",
        "typescript": "~5.3.3",
        "eslint-config-expo": "^7.0.0",
        "jest": "^29.2.1",
        "jest-expo": "~51.0.0"
    }
}