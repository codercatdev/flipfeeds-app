{
    "name": "functions",
    "version": "1.0.0",
    "description": "Firebase Cloud Functions for FlipFeeds App",
    "main": "lib/index.js",
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "serve": "npm run build && firebase emulators:start --only functions",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log",
        "set-claims": "node scripts/set-user-claims.js",
        "seed": "node scripts/seed-test-data.js",
        "test-rules": "node scripts/test-firestore-rules.js",
        "genkit:dev": "bash scripts/run-genkit-dev.sh",
        "genkit:dev:build": "tsc && bash scripts/run-genkit-build.sh",
        "genkit:open": "bash scripts/run-genkit-open.sh",
        "test": "pnpm build && mocha",
        "test:emulators": "cd .. && firebase emulators:exec --only firestore,storage \"cd functions && pnpm test\"",
        "test:watch": "pnpm build:watch & mocha --watch"
    },
    "engines": {
        "node": "22"
    },
    "dependencies": {
        "@genkit-ai/firebase": "^1.24.0",
        "@genkit-ai/google-genai": "^1.22.0",
        "@genkit-ai/googleai": "^1.22.0",
        "@genkit-ai/vertexai": "^1.22.0",
        "@google-cloud/firestore": "^7.11.6",
        "@google-cloud/vertexai": "^1.10.0",
        "@modelcontextprotocol/sdk": "^1.21.1",
        "@types/express": "^5.0.5",
        "@types/uuid": "^10.0.0",
        "data-urls": "^6.0.0",
        "express": "^5.1.0",
        "firebase-admin": "^13.0.0",
        "firebase-functions": "^6.0.0",
        "genkit": "^1.22.0",
        "genkitx-mcp": "^1.14.1",
        "jose": "^6.1.1",
        "long": "^5.3.2",
        "uuid": "^13.0.0",
        "zod-to-json-schema": "^3.24.6"
    },
    "devDependencies": {
        "@types/chai": "^5.2.3",
        "@types/data-urls": "^3.0.4",
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.0.0",
        "chai": "^6.2.1",
        "firebase-functions-test": "^3.0.0",
        "mocha": "^11.7.5",
        "tsx": "^4.20.6",
        "typescript": "^5.0.0"
    },
    "private": true
}
