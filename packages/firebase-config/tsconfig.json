{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "lib": ["ES2022", "DOM"],
        "declaration": true,
        "declarationMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2017",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
