{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "jsx": "preserve",
        "module": "esnext",
        "moduleResolution": "bundler",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./*"],
            "@flip-feeds/ui/components/*": ["../../packages/ui/src/components/*"],
            "@flip-feeds/ui/lib/*": ["../../packages/ui/src/lib/*"],
            "@flip-feeds/ui/hooks/*": ["../../packages/ui/src/hooks/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules", ".next", "out"]
}
