{
    "name": "@flip-feeds/monorepo",
    "version": "1.0.0",
    "private": true,
    "description": "FlipFeeds - Universal video-first application with Next.js and Expo",
    "workspaces": [
        "apps/*",
        "packages/*",
        "functions"
    ],
    "scripts": {
        "// Development": "",
        "dev": "concurrently \"pnpm --filter web dev\" \"pnpm --filter mobile dev\"",
        "dev:web": "pnpm --filter web dev",
        "dev:mobile": "pnpm --filter mobile dev",
        "// Building": "",
        "build": "pnpm --filter \"./packages/*\" build && pnpm --filter \"./apps/*\" build",
        "build:web": "pnpm --filter web build",
        "build:mobile": "pnpm --filter mobile build",
        "build:packages": "pnpm --filter \"./packages/*\" build",
        "// Code Quality": "",
        "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
        "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
        "typecheck": "pnpm -r --parallel run typecheck",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "// Testing": "",
        "test": "pnpm -r --parallel run test",
        "test:watch": "pnpm -r --parallel run test:watch",
        "// Versioning with Changesets": "",
        "changeset": "changeset",
        "version-packages": "changeset version",
        "release": "pnpm build:packages && changeset publish",
        "// Cleaning": "",
        "clean": "pnpm -r --parallel run clean && rm -rf node_modules",
        "clean:modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
        "// Firebase": "",
        "emulators": "firebase emulators:start",
        "deploy:functions": "firebase deploy --only functions",
        "deploy:hosting": "firebase deploy --only hosting",
        "deploy:all": "firebase deploy"
    },
    "devDependencies": {
        "// Monorepo Tools": "",
        "@changesets/cli": "^2.27.1",
        "concurrently": "^8.2.2",
        "turbo": "^2.0.0",
        "// TypeScript": "",
        "typescript": "^5.3.3",
        "@types/node": "^20.10.6",
        "@types/react": "^18.2.46",
        "@types/react-native": "^0.72.8",
        "// ESLint": "",
        "eslint": "^8.56.0",
        "eslint-config-next": "^14.0.4",
        "eslint-config-expo": "^7.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-native": "^4.1.0",
        "@typescript-eslint/parser": "^6.17.0",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "// Prettier": "",
        "prettier": "^3.1.1",
        "// Firebase Tools": "",
        "firebase-tools": "^13.0.2"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    },
    "packageManager": "pnpm@8.15.0"
}