{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "paths": {
            "@flip-feeds/shared-logic": ["../packages/shared-logic/src/index.ts"],
            "@flip-feeds/shared-logic/utils/*": ["../packages/shared-logic/dist/utils/*"]
        }
    },
    "compileOnSave": true,
    "include": ["src"]
}
