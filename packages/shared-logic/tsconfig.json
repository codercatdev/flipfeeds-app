{
    "compilerOptions": {
        "jsx": "react",
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": "./src",
        "declaration": true,
        "declarationMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2017",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["ES2022"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
