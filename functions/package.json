{
    "name": "functions",
    "version": "1.0.0",
    "description": "Firebase Cloud Functions for FlipFeeds App",
    "main": "lib/index.js",
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "serve": "npm run build && firebase emulators:start --only functions",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log",
        "set-claims": "node scripts/set-user-claims.js"
    },
    "engines": {
        "node": "22"
    },
    "dependencies": {
        "@genkit-ai/google-genai": "^1.22.0",
        "@genkit-ai/googleai": "^1.22.0",
        "@google-cloud/firestore": "^7.11.6",
        "@google-cloud/vertexai": "^1.10.0",
        "@modelcontextprotocol/sdk": "^1.21.1",
        "@types/express": "^5.0.5",
        "@types/uuid": "^10.0.0",
        "express": "^5.1.0",
        "firebase-admin": "^13.0.0",
        "firebase-functions": "^7.0.0",
        "genkit": "^1.22.0",
        "genkitx-mcp": "^1.14.1",
        "jose": "^6.1.1",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@types/node": "^22.0.0",
        "firebase-functions-test": "^3.0.0",
        "typescript": "^5.0.0"
    },
    "private": true
}
