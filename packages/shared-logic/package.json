{
    "name": "@flip-feeds/shared-logic",
    "version": "1.0.0",
    "description": "Shared business logic, hooks, and utilities for FlipFeeds",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm",
        "dev": "tsup src/index.ts --format cjs,esm --watch",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf dist node_modules"
    },
    "dependencies": {
        "@flip-feeds/firebase-config": "workspace:*",
        "firebase": "^10.8.0"
    },
    "devDependencies": {
        "react": "^18.2.0",
        "tsup": "^8.0.0",
        "typescript": "^5.3.3"
    },
    "peerDependencies": {
        "react": ">=18.0.0"
    }
}
