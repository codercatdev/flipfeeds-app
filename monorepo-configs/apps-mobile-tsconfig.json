{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "jsx": "react-native",
        "lib": [
            "ES2022"
        ],
        "types": [
            "react-native",
            "jest"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@flip-feeds/*": [
                "../../packages/*/src"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts"
    ],
    "exclude": [
        "node_modules",
        ".expo",
        "android",
        "ios"
    ]
}